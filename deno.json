{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.ns",
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "esnext"
    ],
    "strict": true
  },
  "fmt": {
    "include": [
      "src/",
      "*.md"
    ],
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@entropy": "../core/src/mod.ts",
    "@entropy/configurator": "../core/src/configurator/configurator.module.ts",
    "@entropy/encrypter": "../core/src/encrypter/encrypter.module.ts",
    "@entropy/http": "../core/src/http/http.module.ts",
    "@entropy/injector": "../core/src/injector/injector.module.ts",
    "@entropy/localizator": "../core/src/localizator/localizator.module.ts",
    "@entropy/logger": "../core/src/logger/logger.module.ts",
    "@entropy/router": "../core/src/router/router.module.ts",
    "@entropy/server": "../core/src/server/server.module.ts",
    "@entropy/templates": "../core/src/templates/templates.module.ts",
    "@entropy/testing": "../core/src/testing/testing.module.ts",
    "@entropy/utils": "../core/src/utils/utils.module.ts",
    "@entropy/validator": "../core/src/validator/validator.module.ts",
    "@entropy/websocket": "../core/src/web_socket/web_socket.module.ts",
    "@prisma": "./database/client/deno/edge.ts",
    "@std/": "https://deno.land/std@0.202.0/"
  },
  "lint": {
    "exclude": [
      "public/"
    ]
  },
  "lock": false,
  "tasks": {
    "db:migrate": "deno run -A --unstable npm:prisma@5.3.1 migrate dev --schema=./database/schema.prisma",
    "db:migrate:prod": "deno run -A --unstable npm:prisma@5.3.1 migrate deploy --schema=./database/schema.prisma",
    "db:pull": "deno run -A --unstable npm:prisma@5.3.1 db pull --schema=./database/schema.prisma",
    "db:push": "deno run -A --unstable npm:prisma@5.3.1 db push --schema=./database/schema.prisma",
    "db:seed": "deno run -A ./database/seed.ts",
    "db:setup": "deno run -A --unstable npm:prisma@5.3.1 generate --schema=./database/schema.prisma",
    "dev": "deno run -A --watch ./src/main.ts --dev --open",
    "prod": "deno run -A ./src/main.ts",
    "repl": "deno repl -A --eval 'import * as entropy from \"@entropy\"'",
    "test": "export TESTING=true ; deno test -A --no-check --parallel",
    "test:cov": "export TESTING=true ; deno test -A --coverage=coverage",
    "test:watch": "export TESTING=true ; deno test -A --no-check --parallel --watch"
  }
}
