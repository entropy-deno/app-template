{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.unstable",
      "esnext"
    ],
    "strict": true
  },
  "fmt": {
    "include": [
      "src/",
      "*.md"
    ],
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@entropy": "../core/mod.ts",
    "@entropy/configurator": "../core/configurator/configurator.module.ts",
    "@entropy/constants": "../core/constants.ts",
    "@entropy/encrypter": "../core/encrypter/encrypter.module.ts",
    "@entropy/http": "../core/http/http.module.ts",
    "@entropy/injector": "../core/injector/injector.module.ts",
    "@entropy/localizator": "../core/localizator/localizator.module.ts",
    "@entropy/logger": "../core/logger/logger.module.ts",
    "@entropy/pipes": "../core/pipes/pipes.module.ts",
    "@entropy/router": "../core/router/router.module.ts",
    "@entropy/scheduler": "../core/scheduler/scheduler.module.ts",
    "@entropy/server": "../core/server/server.module.ts",
    "@entropy/templates": "../core/templates/templates.module.ts",
    "@entropy/testing": "../core/testing/testing.module.ts",
    "@entropy/utils": "../core/utils/utils.module.ts",
    "@entropy/validator": "../core/validator/validator.module.ts",
    "@entropy/websocket": "../core/web_socket/web_socket.module.ts",
    "@prisma": "./database/client/deno/edge.ts",
    "@std/": "https://deno.land/std@0.208.0/"
  },
  "lint": {
    "exclude": [
      "public/"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-empty-pattern"
      ]
    }
  },
  "lock": false,
  "tasks": {
    "db:migrate": "deno run -A --unstable npm:prisma@5.6.0 migrate dev --schema=./database/schema.prisma",
    "db:migrate:prod": "deno run -A --unstable npm:prisma@5.6.0 migrate deploy --schema=./database/schema.prisma",
    "db:pull": "deno run -A --unstable npm:prisma@5.6.0 db pull --schema=./database/schema.prisma",
    "db:push": "deno run -A --unstable npm:prisma@5.6.0 db push --schema=./database/schema.prisma",
    "db:seed": "deno run -A ./database/seed.ts",
    "db:setup": "deno run -A --unstable npm:prisma@5.6.0 generate --schema=./database/schema.prisma",
    "dev": "deno run -A --unstable-hmr --quiet ./src/main.ts --dev --open",
    "prod": "deno run -A ./src/main.ts",
    "repl": "deno repl -A --eval 'import * as Entropy from \"@entropy\"'",
    "test": "deno test -A --env=.env.testing --no-check --parallel",
    "test:cov": "deno test -A --coverage=coverage --env=.env.testing",
    "test:watch": "deno test -A --env=.env.testing --no-check --parallel --watch"
  },
  "unstable": [
    "cron",
    "kv"
  ]
}
