{
  "fmt": {
    "include": [
      "src/"
    ],
    "indentWidth": 2,
    "lineWidth": 85,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@/": "./src/",
    "@std/": "https://deno.land/std@0.190.0/",
    "@flavor": "../core/src/mod.ts"
  },
  "tasks": {
    "db:generate": "deno run -A --unstable npm:prisma generate --schema=./database/schema.prisma",
    "db:migrate": "deno run -A --unstable npm:prisma migrate dev --schema=./database/schema.prisma",
    "start": "deno run -A --watch ./src/main.ts --open",
    "start:dev": "deno run -A --watch ./src/main.ts --open",
    "start:prod": "deno run -A ./src/main.ts"
  }
}
